<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student AI Tool Directory</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f9fafc; margin: 0; padding: 20px; }
    h1 { text-align: center; }
    form { display: flex; flex-direction: column; max-width: 400px; margin: 0 auto 30px; }
    input, textarea { margin: 5px 0; padding: 10px; border: 1px solid #ccc; border-radius: 5px; }
    button { padding: 10px; background: #007BFF; color: white; border: none; border-radius: 5px; cursor: pointer; }
    button:hover { background: #0056b3; }
    .tool-box { background: white; margin: 10px auto; padding: 15px; border-radius: 5px; max-width: 600px; box-shadow: 0 0 5px rgba(0,0,0,0.1); }
    .tool-box a { color: #007BFF; text-decoration: none; }
    .tool-box a:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <h1>AI Tools Students Recommend</h1>

  <form id="toolForm">
    <input type="url" id="toolLink" placeholder="Enter AI tool link" required>
    <textarea id="toolDesc" placeholder="Describe this tool (optional)" rows="3"></textarea>
    <button type="submit">Submit Tool</button>
  </form>

  <div id="toolList"></div>

  <script>
    const form = document.getElementById('toolForm');
    const toolList = document.getElementById('toolList');
    let tools = JSON.parse(localStorage.getItem('aiTools')) || [];

    function renderTools() {
      toolList.innerHTML = '';
      tools.forEach((tool, index) => {
        const div = document.createElement('div');
        div.className = 'tool-box';
        div.innerHTML = `
          <a href="${tool.link}" target="_blank">${tool.link}</a>
          <p>${tool.description}</p>
        `;
        toolList.appendChild(div);
      });
    }

    form.addEventListener('submit', e => {
      e.preventDefault();
      const link = document.getElementById('toolLink').value.trim();
      const description = document.getElementById('toolDesc').value.trim();
      if (link) {
        tools.push({ link, description });
        localStorage.setItem('aiTools', JSON.stringify(tools));
        form.reset();
        renderTools();
      }
    });

    renderTools();
  </script>
</body>
</html>
